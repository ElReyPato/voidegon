---
interface Props {
  src?: string;
  alt?: string;
  href?: string;
  trasfondo?: string;
  alineamiento?: string;
}

const {
  src = '/img/background.png',
  alt,
  href,
  trasfondo,
  alineamiento,
} = Astro.props;
---

<a href={href}>
  <article
    class={`
    	p-2 bg-[--gray] rounded-lg transition-all
    	h-full w-full hover:bg-[--black] hover:blur-sm
  	`}
  >
    <figure class='w-full h-full'>
      <img
        src={src}
        alt={alt}
        class='rounded-lg h-full w-full object-cover object-top'
      />
      <!-- 
			<figcaption
        class='flex flex-col items-center justify-center uppercase text-4xl w-full h-full gap-y-8 font-bold font-[unbounded]'
      >
        <h1 class='text-[--event]'>{trasfondo}</h1>
        <h1>{alineamiento}</h1>
      </figcaption> 
			-->
    </figure>
  </article>
</a>

