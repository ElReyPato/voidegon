---
interface Props {
	hp: number;
	hpmax: number;
}

const { hp, hpmax } = Astro.props;

let porcentaje = 0;
function calcularPorcentaje(hp: number) {
	porcentaje = Math.floor((hp / hpmax) * 100);
	return porcentaje;
}

calcularPorcentaje(hp);
---

<section
	class={`
		flex justify-center items-center
		p-2 bg-[--gray] rounded-lg 
		h-full w-full
	`}
>
	<div class='w-full h-full bg-[--dark] rounded-lg'>
		<div
			class={`
				font-bold font-[pacifico] text-[--gray] bg-red-600
				rounded-lg h-full
				flex items-center justify-center
			`}
			style={`width: ${porcentaje}%`}
		>
			{hp} | {hpmax}
		</div>
	</div>
</section>
