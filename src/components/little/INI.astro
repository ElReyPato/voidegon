---
interface Props {
	des: number;
}

const { des } = Astro.props;

function filtrarIni(des: number) {
	let ini = des;
	if (des >= 0) {
		return `+${ini}`;
	}

	return ini;
}
---

<section
	class={`
    rounded-lg bg-[--gray]
		p-2 w-full h-full
		cursor-default
	`}
>
	<div
		class={`
      p-2 bg-[--dark] rounded-lg 
		  flex justify-center items-center flex-wrap gap-4
		  h-full w-full 
    `}
	>
		<div>
			<!-- <h3 class='font-[unbounded] font-bold text-center'>INI</h3> -->
		</div>
		<svg
			class='text-[--date]'
			width='40'
			height='40'
			viewBox='0 0 24 24'
			stroke-width='2'
			stroke='currentColor'
			fill='none'
			stroke-linecap='round'
			stroke-linejoin='round'
		>
			<path stroke='none' d='M0 0h24v24H0z' fill='none'></path>
			<path d='M20.984 12.53a9 9 0 1 0 -7.552 8.355'></path>
			<path d='M12 7v5l3 3'></path><path d='M19 16l-2 3h4l-2 3'></path>
		</svg>
		<h6 class='font-[pacifico] text-xl font-semibold text-[--date] mt-0.5'>
			[{filtrarIni(des)}]
		</h6>
	</div>
</section>
