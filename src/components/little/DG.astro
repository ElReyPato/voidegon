---
interface Props {
  dice: number;
  cantidad: number;
}
const { dice, cantidad } = Astro.props;
---

<section
  class={`
    bg-[--gray] p-4
    flex rounded-lg justify-center items-center
	cursor-default
`}
>
  <div class='bg-[--dark] p-4 rounded-lg'>
    <svg
      width='24'
      height='24'
      viewBox='0 0 24 24'
      stroke-width='2'
      stroke='currentColor'
      fill='none'
      stroke-linecap='round'
      stroke-linejoin='round'
      ><path stroke='none' d='M0 0h24v24H0z' fill='none'></path>
      <path
        d='M21 16.008v-8.018a1.98 1.98 0 0 0 -1 -1.717l-7 -4.008a2.016 2.016 0 0 0 -2 0l-7 4.008c-.619 .355 -1 1.01 -1 1.718v8.018c0 .709 .381 1.363 1 1.717l7 4.008a2.016 2.016 0 0 0 2 0l7 -4.008c.619 -.355 1 -1.01 1 -1.718z'
      ></path>
      <path d='M12 22v-10'></path>
      <path d='M12 12l8.73 -5.04'></path>
      <path d='M3.27 6.96l8.73 5.04'></path>
    </svg>
  </div>
  <h6 class='mx-4 font-[pacifico] text-2xl'>
    {cantidad}
    <span class='font-[lobster]'>d</span>
    {dice}
  </h6>
</section>

<style>
  section {
    /** Box Shadow Definitivo */
    box-shadow: 10px 10px 10px 5px rgba(0, 0, 0, 0.1);

    transition: transform 100ms ease;
    cursor: default;
  }
  section:hover {
    transform: scale(1.01);
  }
</style>
