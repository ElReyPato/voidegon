---
interface Props {
	fue: number;
	des: number;
	con: number;
	int: number;
	sab: number;
	car: number;
	mod?: Array<string>; // Parametro Opcional
	com?: Array<string>; // Parametro Opcional
}

const { fue, des, con, int, sab, car, mod, com } = Astro.props;

// Modificar los potenciadores de las Stats Base
function modificadorStats(stat = 0) {
	let modificador = 0;

	if (stat < 0) {
		stat = 0;
	}

	if (stat > 10) {
		modificador = Math.floor((stat - 10) / 2); // Ajustado el cálculo aquí
	} else if (stat > 0 && stat <= 10) {
		modificador = -Math.ceil((10 - stat) / 2);
	} else if (stat <= 0) {
		modificador = -5;
	}

	if (modificador >= 0) {
		return `+${modificador}`;
	}

	return modificador;
}

function aplicarModificador() {}
---

<div>
	<table class='m-4 p-4'>
		<tr>
			<td>FUE</td>
			<td>{fue}</td>
			<td>[{modificadorStats(fue)}]</td>
			<td>|</td>
			<td>1</td>
			<td>+1</td>
			<td>|</td>
			<td>-</td>
			<td>+1</td>
		</tr>
		<tr>
			<td>DES</td>
			<td>{des}</td>
			<td>[{modificadorStats(des)}]</td>
			<td>|</td>
			<td>-</td>
			<td>+2</td>
			<td>|</td>
			<td>-</td>
			<td>+2</td>
		</tr><tr>
			<td>CON</td>
			<td>{con}</td>
			<td>[{modificadorStats(con)}]</td>
			<td>|</td>
			<td>-</td>
			<td>+0</td>
			<td>|</td>
			<td>-</td>
			<td>+0</td>
		</tr><tr>
			<td>INT</td>
			<td>{int}</td>
			<td>[{modificadorStats(int)}]</td>
			<td>|</td>
			<td>-</td>
			<td>+3</td>
			<td>|</td>
			<td>x</td>
			<td>+5</td>
		</tr><tr>
			<td>SAB</td>
			<td>{sab}</td>
			<td>[{modificadorStats(sab)}]</td>
			<td>|</td>
			<td>-</td>
			<td>+2</td>
			<td>|</td>
			<td>x</td>
			<td>+4</td>
		</tr><tr>
			<td>CAR</td>
			<td>{car}</td>
			<td>[{modificadorStats(car)}]</td>
			<td>|</td>
			<td>2</td>
			<td>+1</td>
			<td>|</td>
			<td>-</td>
			<td>+1</td>
		</tr>
	</table>
</div>

