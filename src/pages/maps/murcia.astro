---
import Layout from '../../layouts/Layout.astro';
import Article from '../../components/Article.astro';
import Section from '../../components/Section.astro';
import Menu from '../../layouts/Menu.astro';
import SmallCard from '../../components/SmallCard.astro';
---

<Layout title='| Murcia'>
	<Article title='Murcia' img='/img/maps/murcia.png' />
	<Section title='Locales' />
	<Menu>
		<SmallCard
			name='Taberna'
			enlace='murcia/tavern'
			img='/img/maps/murcia/tavern.png'
		/>
		<SmallCard name='Biblioteca' />
		<SmallCard name='Iglesia' />
		<SmallCard name='Forja' />
		<SmallCard name='Almacen' lock />
		<SmallCard
			name='Tienda de Pociones'
			img='/img/npc/tir/var/bg_var.png'
			lock
		/>
	</Menu>
	<hr class='w-[80vw] mx-auto border-[--gray] border-2 rounded-lg mt-8' />
	<Section title='Ubicaciones' />
	<Menu>
		<SmallCard name='Cueva' enlace='maps/murcia/cave' />
		<SmallCard name='Bosque' enlace='maps/murcia/cave' />
		<SmallCard name='Mazmorra' enlace='maps/murcia/cave' />
		<SmallCard name='Jardin' enlace='maps/murcia/cave' />
	</Menu>
	<div class='bg-[--gray]'>
		<!-- Fragmento de Historia -->
	</div>
</Layout>
