---
import Layout from '@/layouts/Layout.astro';
import Weapon from '@/components/Weapon.astro';
import Spell from '@/components/Spell.astro';
import VEL from '@/components/little/VEL.astro';
import Backpack from '@/components/character/Backpack.astro';
---

<Layout title='】 Voidegon ▸ Extras ▸ Barbarian'>
  <h1 class='my-8 text-center text-9xl text-[--warning] font-bold'>
    ¡ESTO NO ES UN PUZZLE, <br /> ES MI ZONA DE PRUEBAS!
  </h1>
  <section class='w-[30vw] mx-auto'>
    <Weapon name='espada corta' />
  </section>
  <section class='w-[30vw] mx-auto mt-8'>
    <Spell name='Luz' />
  </section>
  <section class='mt-4 w-[30vw] mx-auto'>
    <VEL vel={30} fly={60} dig={10} />
  </section>
  <section class='mt-4 w-[80vw] mx-auto'>
    <Backpack
      objects={['Poción', 'Libro', 'Libro', 'Libro', 'Libro', 'Libro', 'Libro']}
    />
  </section>
</Layout>
