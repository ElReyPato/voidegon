---
import Layout from '../layouts/Layout.astro';
import Article from '../components/Title-XL.astro';
import Section from '../components/Section.astro';
import Menu from '../layouts/Menu.astro';
import SmallCard from '../components/SmallCard.astro';
---

<Layout title='】 Voidegon ▸ Extras'>
	<Article title='Detalles Extras' />
	<Section title='Clases' subtitle='Basic' />
	<Menu>
		<SmallCard
			name='Barbarian'
			enlace='/extras/class/barbarian'
			img='https://i.pinimg.com/564x/11/29/d4/1129d435cbd01df84c36f3483eb43a00.jpg'
		/>
		<SmallCard
			name='Bard'
			enlace='/extras/bard'
			img='https://i.pinimg.com/564x/68/11/06/681106f24ee37e2e72667a9cdf826af3.jpg'
		/>
		<SmallCard
			name='Cleric'
			enlace='/extras/cleric'
			img='https://i.pinimg.com/564x/ac/59/2a/ac592a8beffedce5b96aa3dca901037c.jpg'
		/>
		<SmallCard
			name='Druid'
			enlace='/extras/druid'
			img='https://i.pinimg.com/564x/08/00/b0/0800b0c20f4d8d9b09d75207642da13d.jpg'
		/>
		<SmallCard name='Fighter' enlace='/extras/fighter' />
		<SmallCard name='Monk' enlace='/extras/monk' />
		<SmallCard name='Paladin' enlace='/extras/paladin' />
		<SmallCard name='Ranger' enlace='/extras/ranger' />
		<SmallCard name='Rogue' enlace='/extras/rogue' />
		<SmallCard name='Sorcerer' enlace='/extras/sorcerer' />
		<SmallCard name='Warlock' enlace='/extras/warlock' />
		<SmallCard name='Wizard' enlace='/extras/wizard' />
	</Menu>
	<Section title='Razas' subtitle='Basic' />
	<Menu>
		<SmallCard
			name='Dragonborn'
			enlace='/extras/race/dragonborn'
			img='https://i.pinimg.com/564x/7f/81/74/7f8174a1e0c80a2cad87cc4f8bad6725.jpg'
		/>
		<SmallCard
			name='Dwarf'
			enlace='/extras/dwarf'
			img='https://i.pinimg.com/564x/f9/fe/3c/f9fe3cca474dffda99ba991b38f1e670.jpg'
		/>
		<SmallCard name='Elf' enlace='/extras/elf' />
		<SmallCard name='Gnome' enlace='/extras/gnome' />
		<SmallCard
			name='Half-Elf'
			enlace='/extras/half-elf'
			img='https://i.pinimg.com/564x/f2/88/46/f28846a9d132755f494f8665d3abfb34.jpg'
		/>
		<SmallCard name='Halfling' enlace='/extras/halfling' />
		<SmallCard name='Half-Orc' enlace='/extras/half-orc' />
		<SmallCard
			name='Human'
			enlace='/extras/human'
			img='https://i.pinimg.com/564x/f1/96/93/f19693bad1a19392ae9b712458d9c9a3.jpg'
		/>
		<SmallCard
			name='Tiefling'
			enlace='/extras/tiefling'
			img='https://i.pinimg.com/564x/a0/56/ac/a056ac016387554f8be5a40c3c229457.jpg'
		/>
	</Menu>
	<Section subtitle='Monsters of the Multiverse' />
	<Menu>
		<SmallCard
			name='Aasimar'
			img='https://www.shutterstock.com/image-vector/angel-wings-illustration-vector-desing-600nw-2289365543.jpg'
			enlace='/extras/aasimar'
		/>
	</Menu>
	<Section title='Objetos' />
	<Section title='Guias' />
</Layout>
